<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.waqarbscs.onewindowsms">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name=".Activity.SmsListActivity"
            android:theme="@style/MainTheme" />
        <activity
            android:name="com.apps.OneWindowSol.onewindowsms.Activity.AddSmsActivity"
            android:label="Shedule a SMS"
            android:screenOrientation="portrait"
            android:theme="@style/MainTheme" />
        <activity android:name="com.apps.OneWindowSol.onewindowsms.Activity.SmsSchedulerPreferenceActivity" />

        <receiver
            android:name="com.apps.OneWindowSol.onewindowsms.BootReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.apps.OneWindowSol.onewindowsms.AlarmReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.github.yeriomin.smsscheduler.AlarmReceiver.INTENT_FILTER" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.apps.OneWindowSol.onewindowsms.SmsSentReceiver" />
        <receiver android:name="com.apps.OneWindowSol.onewindowsms.SmsDeliveredReceiver" />

        <service
            android:name="com.apps.OneWindowSol.onewindowsms.SmsSenderService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.github.yeriomin.smsscheduler.AlarmReceiver.INTENT_FILTER" />
            </intent-filter>
        </service>
        <service android:name="com.apps.OneWindowSol.onewindowsms.SmsSentService" />
        <service android:name="com.apps.OneWindowSol.onewindowsms.SmsDeliveredService" />

        <activity
            android:name="com.apps.OneWindowSol.onewindowsms.Activity.ContactBook"
            android:theme="@style/MainTheme" />
        <activity
            android:name="com.apps.OneWindowSol.onewindowsms.Activity.Splash"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.apps.OneWindowSol.onewindowsms.Activity.MainActivity"
            android:theme="@style/MainTheme" />
        <activity
            android:name="com.apps.OneWindowSol.onewindowsms.Activity.Detail"
            android:theme="@style/MainTheme" />
        <activity
            android:name="com.apps.OneWindowSol.onewindowsms.Activity.Delete"
            android:theme="@style/MainTheme" />
        <activity
            android:name="com.apps.OneWindowSol.onewindowsms.Activity.About"
            android:theme="@style/MainTheme"
            android:parentActivityName="com.apps.OneWindowSol.onewindowsms.Activity.MainActivity"/>
        <activity
            android:name="com.apps.OneWindowSol.onewindowsms.Activity.DeleteCardView"
            android:theme="@style/MainTheme"
            android:label="History"
            android:parentActivityName="com.apps.OneWindowSol.onewindowsms.Activity.MainActivity"/>
        <activity android:name="com.apps.OneWindowSol.onewindowsms.Activity.DetailCardView"
            android:theme="@style/MainTheme"
            android:label="Sheduled SMS List"
            android:parentActivityName="com.apps.OneWindowSol.onewindowsms.Activity.MainActivity"></activity>
    </application>

</manifest>