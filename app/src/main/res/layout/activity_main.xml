<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apps.OneWindowSol.onewindowsms2.Activity.MainActivity"
    android:orientation="vertical"
    android:weightSum="6">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:gravity="center">
        <View
            android:layout_width="240dp"
            android:layout_height="1dp"
            android:background="#449def"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SMS SCHEDULER"
            android:textSize="30sp"
            android:gravity="center"
            android:id="@+id/smstext" />
        <View
            android:layout_width="180dp"
            android:layout_height="1dp"
            android:background="#449def"
            android:layout_gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/main_back"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_weight="4"
        android:layout_margin="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="10dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/imageButton1"
                android:layout_weight="1"
                android:drawableTop="@drawable/new_add"
                android:text="New"
                android:textAlignment="center"
                android:paddingTop="20dp"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"
                android:background="@drawable/btn_blue"
                android:layout_marginRight="5dp"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/imageButton2"
                android:layout_weight="1"
                android:drawableTop="@drawable/view"
                android:text="Show"
                android:textAlignment="center"
                android:paddingTop="20dp"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"
                android:background="@drawable/btn_yellow"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/imageButton3"
                android:layout_weight="1"
                android:drawableTop="@drawable/history_book"
                android:text="History"
                android:textAlignment="center"
                android:paddingTop="20dp"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"
                android:background="@drawable/btn_yellow"
                android:layout_marginRight="5dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/imageButton4"
                android:layout_weight="1"
                android:drawableTop="@drawable/about_us"
                android:text="About Us"
                android:textAlignment="center"
                android:paddingTop="20dp"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"
                android:background="@drawable/btn_blue"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
